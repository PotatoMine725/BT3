<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-f" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trang Quản Trị</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles",required: false)
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Quản Trị Web</h3>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý Sản phẩm", "Index", "QuanLySanPham", null, new { @class = "nav-link" })
                </li>
            </ul>
        </nav>

        <div id="content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Trang Quản Trị Bán Hàng</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>